		robot.keyPress(KeyEvent.VK_TAB);
		robot.keyPress(KeyEvent.VK_ENTER);
		driver.findElement(By.cssSelector("#userNavigationLabel")).click();
		driver.findElement(By.id("logoutMenu")).click();
		
